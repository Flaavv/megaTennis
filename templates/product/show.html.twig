

{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
<style>
    .item-price{
        font-size: 19px;
        font-weight: bold;
    }
</style>
<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-7">
        <h2>{{ product.name }}</h2>
        <p>{{ product.subtitle }}</p>
        <span class="item-price">{{ (product.price/100)|number_format(2) }}â‚¬</span>
        <hr>
        <p>{{ product.description }}</p><br>
        <a href="{{ path('add_to_cart', { 'id' :product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
    </div>
</div>
    


{% endblock %}
